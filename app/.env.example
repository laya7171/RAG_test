# Conversational RAG API - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Vector Database Configuration
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=rag-index
PINECONE_ENVIRONMENT=us-east-1-aws

# Redis Configuration
# For local Redis: redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Database Configuration
# SQLite (default - for development)
DATABASE_URL=sqlite:///./rag.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_db

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/rag_db

# Application Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
CHAT_HISTORY_TTL=86400  # 24 hours in seconds

# Optional: Skip settings validation (for testing only)
# SKIP_SETTINGS_VALIDATION=true

# Server Configuration (for run.py)
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info
